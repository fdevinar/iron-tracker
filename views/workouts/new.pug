include ../partials/header.pug

- let daysOfWeek = ['Monday','Tuesday','Wednesday','Thursday','Friday'];
- let exercisesPerDay = 8;


form(action='/workouts/new' method='post')

    .exercises
        each day in daysOfWeek
            div(class=day class='day-block')
                h3 #{day}
                - for (i=0; i<exercisesPerDay; i++){
                    .exercises-block
                        label(for='muscle') Muscle 
                        input#muscle(type='muscle' name='muscle')
                        br
                        label(for='name') Name 
                        input#name(type='text' name='name')
                        br
                        label(for='reps') Reps 
                        input#reps(type='number' name='reps')
                        
                        label(for='sets') Sets 
                        input#sets(type='number' name='sets')
                        
                        label(for='weight') Weight 
                        input#weight(type='number' name='weight')
                -}
        submit
            button Create




include ../partials/footer.pug